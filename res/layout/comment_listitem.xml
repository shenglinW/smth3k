<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_listitem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="4dip"
    android:paddingTop="8dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical"
        android:paddingBottom="7dip" >

        <TextView
            android:id="@+id/comment_listitem_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="4dip"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/comment_listitem_plant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="@color/listitem_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/comment_listitem_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:includeFontPadding="false"
                android:textColor="@color/listitem_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.0dip"
                android:text="@string/post_detail_lable_pub"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/comment_listitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/AdLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >
        </RelativeLayout>

        <com.jimidigi.smth3k.widget.LinkView
            android:id="@+id/comment_listitem_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="web|email"
            android:includeFontPadding="false"
            android:textColor="@color/listitem_black"
            android:textSize="@dimen/text_size_18" />
        <!--
                android:lineSpacingMultiplier="1.5"
                android:lineSpacingExtra="2dip"
        -->

        <FrameLayout
            android:id="@+id/comment_listitem_att"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </FrameLayout>
    </LinearLayout>

</LinearLayout>